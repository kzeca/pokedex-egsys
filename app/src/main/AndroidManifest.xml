<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.egsys.pokedex">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_pokedex"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Pokedex">
        <activity android:name="com.egsys.pokedex.ui.splash.SplashScreenActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.egsys.pokedex.ui.filter.type.FilterTypeActivity" />
        <activity android:name="com.egsys.pokedex.ui.filter.FilterActivity" />
        <activity android:name="com.egsys.pokedex.ui.details.DetailsActivity" />
        <activity android:name="com.egsys.pokedex.ui.home.HomeActivity"></activity>
    </application>

</manifest>